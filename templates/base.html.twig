<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {# <link rel="stylesheet" href="{{ asset('css/normalize.css') }}"> #}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        <link rel="icon" type="images/ico" href="{{ asset('images/favicon.ico')}}">
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

    </head>
    <body>
        <header class="container">
            <nav class="menu">
                <a href="{{ path('index') }}">accueil</a>
        {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_register') }}">créez un compte</a>
                <a href="{{ path('blog_event_index') }}">Gestion annonce blog Event</a>
                <a href="{{ path('renseignements_index') }}">Gestion renseignements</a>
                <a href="{{ path('location_index') }}">Gestion locations</a>
                <a href="{{ path('user_index') }}">Gestion administrateur</a>
                <a href="{{ path('artiste_index') }}">Gestion label</a>
                <a href="{{ path('admin') }}">admin</a>
                <a href="{{ path('membre') }}">membre</a>
                <a href="{{ path('app_logout') }}">déconnexion</a>
        {% elseif is_granted('ROLE_MEMBRE') %}
                <a href="{{ path('blog_event_index') }}">Gestion annonce blog Event</a>
                <a href="{{ path('renseignements_index') }}">Gestion renseignements</a>
                <a href="{{ path('location_index') }}">Gestion locations</a>
                <a href="{{ path('artiste_index') }}">Gestion label</a>
                <a href="{{ path('app_logout') }}">déconnexion</a>
                <a href="{{ path('membre') }}">membre</a>
        {% endif %}            
        </nav>
            {% if app.user %}
            <nav class="mb-3">
                Bienvenue {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                
            </nav>
        {% endif %}
        </header>
        <section>

        {% block titre1 %}
        {% endblock %}
        
        {% block body %}
        {% endblock %}

        {# <div class="container"> #}
        {% block bodyadmin %}
        {% endblock %}
